{% extends "card.jinja2" %}


{% macro card_details(card) %}
    {% if hidden %}
        <button onclick="explanation()">Toelichting</button>
    {% endif %}
    {{ card_info(card) }}
{% endmacro %}


{% block navigation %}
    {% set dirs = card.directions() %}
    <table width=100%>
        <tr>
            <td>&nbsp;</td>
            <td style="text-align: center"><a href="{{ dirs[0] }}">Omhoog</a></td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td><a href="{{ dirs[3] }}">Vorige</a></td>
            <td style="text-align: center"><a href="{{url_for('overview') }}">Overzicht</a></td>
            <td style="text-align: right"><a href="{{ dirs[1] }}">Volgende</a></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td style="text-align: center"><a href="{{ dirs[2] }}">Omlaag</a></td>
            <td>&nbsp;</td>
        </tr>
    </table>
{% endblock %}