{% extends "card.jinja2" %}


{% macro card_details(card) %}
  {% set card_id = 'card_%02d' % card.nr %}
  {% if hidden %}
    <button onclick="explanation('{{card_id}}')">Toelichting</button>
  {% endif %}
  <div class="{{card_id}} explanation {{hidden}}">
    {{ card_info(card) }}
  </div>
{% endmacro %}


{% block navigation %}
  <center><a href="{{url_for('related', nr=card.nr)}}">Gerelateerd</a></center>
  {% set dirs = card.directions() %}
  <div id="nav">
    <a href="{{ dirs[0] }}">&blacktriangle;</a><br/>
    <a href="{{ dirs[3] }}">&blacktriangleleft;</a>
    <a href="{{url_for('overview') }}" style="margin: 10pt">&FilledSmallSquare;</a>
    <a href="{{ dirs[1] }}">&blacktriangleright;</a></br>
    <a href="{{ dirs[2] }}">&blacktriangledown;</a>
  </div>
{% endblock %}
