{% extends "overview.jinja2" %}

{% block cards %}
  <h2>Overzicht in Herstelde Volgorde</h2>
  <a target="letarot" href="http://www.letarot.nl/welke-tarotkaarten-gebruik-ik-en-waarom-de-tarot-in-de-herstelde-orde/">Uitleg</a>
  <h3>Grote arcana</h3>
  <table>
    <tr>
      <td>&nbsp;</td>
      <td>{{render_card(cards[0])}}</td>
      <td colspan=9>&nbsp;</td>
      <td>{{render_card(cards[23])}}</td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      {% for nr in ROMANS %}
        <td>{{nr}}: {{symbols.get(nr)}}</td>
      {% endfor %}
    </tr>
    <tr>
      <td>I-X: {{symbols.get('grote arcana 1-10')}}</td>
      {{render_cards(cards[1:12])}}
    </tr>
    <tr>
      <td>XI-XX: {{symbols.get('grote arcana 11-20')}}</td>
      {{render_cards(cards[12:23])}}
    </tr>
  </table>

  <h3>Kleine arcana</h3>
  <table>
    <tr>
      <td>&nbsp;</td>
      <td>&lt; Aas: {{symbols.get('aas')}} &gt;</td>
      <td>&lt;</td>
      <td colspan=7>Getallen: {{symbols.get('getallen')}}</td>
      <td>&gt;</td>
      <td>&lt;</td>
      <td colspan=2>Hof: {{symbols.get('hofkaart')}}</td>
      <td>&gt;</td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      {% for nr in ROMANS %}
        <td>{{nr}}: {{symbols.get(nr)}}</td>
      {% endfor %}
      {% for nr in HOFKAARTEN %}
        <td>{{nr}}: {{symbols.get(nr)}}</td>
      {% endfor %}
    </tr>
    <tr>
      <td>Staven: {{symbols.get('pentakels')}}</td>
      {{render_cards(cards[24:38])}}
    </tr>
    <tr>
      <td>Pentakels: {{symbols.get('staven')}}</td>
      {{render_cards(cards[38:52])}}
    </tr>
    <tr>
      <td>Zwaarden: {{symbols.get('kelken')}}</td>
      {{render_cards(cards[52:66])}}
    </tr>
    <tr>
      <td>Kelken: {{symbols.get('zwaarden')}}</td>
      {{render_cards(cards[66:80])}}
    </tr>
  </table>
{% endblock cards %}
