{% extends "card.jinja2" %}


{% block content %}
    <h2>Kaartlegging</h2>
    <table width=100%>
        <tr>
            {% for card in cards %}
                {% set coin = turned and range(0, 2) | random %}
                {% set turned = 'class="turned"' if coin else ''%}
                <td><img src="{{ url_for('static', filename=card.img) }}" {{turned}} height=400></td>
            {% endfor %}
        </tr>
        <tr><td colspan="{{cards | length}}"><button onclick="explanation()">Toelichting</button>
        {% if turned %}
            <button onclick="turn()">Rechtop</button>
        {% endif %}
        </td></tr>
        <tr>
            {% for card in cards %}
                <td>    
                    {{ card_info(card, deck.nr(card)) }}
                </td>
            {% endfor %}
        </tr>
    </table>
{% endblock %}